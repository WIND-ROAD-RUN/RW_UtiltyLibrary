{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-v143",
      "hidden": true,
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_GENERATOR_TOOLSET": "v143"
      }
    },
    {
      "name": "windows-v142",
      "hidden": true,
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_GENERATOR_TOOLSET": "v142"
      }
    },
    {
      "name": "x64-debug-v143",
      "displayName": "x64 Debug (v143)",
      "inherits": "windows-v143",
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release-v143",
      "displayName": "x64 release (v143)",
      "inherits": "windows-v143",
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-debug-v142",
      "displayName": "x64 Debug (v142)",
      "inherits": "windows-v142",
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release-v142",
      "displayName": "x64 release (v142)",
      "inherits": "windows-v142",
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}